<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminAddEditMenuCombo"
        android:background="@drawable/main_background">
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_marginTop="20pt"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pacifico"
                android:textSize="15pt"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:text="@string/AdminCustomCombo"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginVertical="50dp"
                android:padding="10dp">
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/scrollViewDaftarCombo">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <View android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <View android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                <ImageView
                        android:layout_width="25pt"
                        android:layout_height="25pt"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:id="@+id/addMenuProductButton"
                        android:onClick="addNewCombo"
                        />
                <View android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/addMenuProductText"
                    android:onClick="addNewcombo"
                    android:text="@string/AdminCustomMenuAddCombo"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>